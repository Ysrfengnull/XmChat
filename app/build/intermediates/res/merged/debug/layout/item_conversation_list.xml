<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/width_3_160">

    <ImageView
        android:layout_marginLeft="@dimen/width_3_160"
        android:layout_marginBottom="@dimen/width_3_160"
        android:layout_centerVertical="true"
        android:id="@+id/conversation_head_iv"
        android:layout_width="@dimen/height_13_160"
        android:layout_height="@dimen/height_13_160"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/width_5_160"
        android:layout_toRightOf="@+id/conversation_head_iv"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/conversation_name_iv"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="欢迎您再次回到XM"
            android:id="@+id/conversation_message_iv"
            android:layout_marginTop="@dimen/height_1_160"
            android:textColor="@color/grey"
            android:layout_marginRight="@dimen/width_3_160"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/conversation_time_iv"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="10:21"
        android:textColor="@color/grey"
        android:layout_marginRight="@dimen/width_3_160"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>